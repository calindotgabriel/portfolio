---

<ProjectLayout title={project.title} description={project.shortDescription}>
  <div class="project-detail">
    <!-- Hero Section -->
    <section class="project-hero">
      <div class="project-hero-content">
        <div class="project-breadcrumb">
          <a href="/">Home</a> / <a href="/projects">Projects</a> / {
            project.title
          }
        </div>
        <h1 class="project-hero-title">{project.title}</h1>
        <p class="project-hero-description">{project.shortDescription}</p>
        <div class="project-hero-meta">
          <span class={`project-badge badge-${project.status.toLowerCase()}`}
            >{project.status}</span
          >
          <a href={project.github} target="_blank" class="btn-secondary">
