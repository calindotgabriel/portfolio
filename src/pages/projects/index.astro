---
import ProjectLayout from "../../components/ProjectLayout.astro";
import TechIcon from "../../components/TechIcon.astro";
import { projects } from "../../data/projects.js";
---

<ProjectLayout
  title="All Projects"
  description="Complete portfolio of development projects"
>
  <main>
    <section
      class="projects-hero"
      style="background: linear-gradient(135deg, #6366f1 0%, #ec4899 100%); color: white; padding: 64px 0 48px; margin-bottom: 2.5rem; text-align: center; margin-top: 3rem;"
    >
      <h1
        style="font-size: 3rem; font-weight: 800; margin-bottom: 1rem; letter-spacing: -0.02em;"
      >
        Portfolio Projects
      </h1>
      <p
        style="font-size: 1.25rem; color: rgba(255,255,255,0.85); max-width: 600px; margin: 0 auto;"
      >
        Enterprise-grade solutions built with modern technologies
      </p>
    </section>

    <section
      class="projects-grid-section"
      style="max-width: 900px; margin: 0 auto; padding: 0 24px;"
    >
      <div
        class="projects-grid"
        style="display: grid; grid-template-columns: repeat(auto-fit, minmax(340px, 1fr)); gap: 2.5rem;"
      >
        {
          projects.map((project) => (
            <a
              href={`/projects/${project.id}`}
              style="text-decoration: none; color: inherit;"
            >
              <article
                class="project-card animate-fade-in"
                style="background: var(--gradient-card); border-radius: 20px; box-shadow: var(--shadow-lg); border: 1px solid rgba(99,102,241,0.08); padding: 2.5rem 2rem; min-height: 220px; display: flex; flex-direction: column; gap: 1.25rem; transition: all 0.3s cubic-bezier(0.4,0,0.2,1);"
              >
                <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 0.5rem;">
                  <h2 style="font-size: 1.35rem; font-weight: 700; margin: 0;">
                    {project.title}
                  </h2>
                  <span
                    class="project-badge"
                    style="padding: 0.25rem 0.75rem; border-radius: 20px; font-size: 0.75rem; font-weight: 600; color: white; background: ${project.status === 'LIVE' ? '#10b981' : project.status === 'ENTERPRISE' ? '#6366f1' : 'var(--primary)'};"
                  >
                    {project.status}
                  </span>
                </div>
                <p style="font-size: 1.05rem; color: var(--gray); margin-bottom: 0.5rem; flex-grow: 1;">
                  {project.shortDescription}
                </p>
                <div
                  class="tech-pills"
                  style="display: flex; gap: 0.75rem; flex-wrap: wrap; margin-top: auto;"
                >
                  {project.tech.map((tech: string) => (
                    <span
                      class="tech-pill"
                      style="padding: 0.5rem 1rem; background: rgba(99,102,241,0.1); color: var(--primary); border-radius: 50px; font-weight: 500; font-size: 0.875rem; border: 1px solid rgba(99,102,241,0.2); display: flex; align-items: center; gap: 0.5rem;"
                    >
                      <TechIcon technology={tech} size={16} />
                      {tech}
                    </span>
                  ))}
                </div>
              </article>
            </a>
          ))
        }
      </div>
    </section>
  </main>
</ProjectLayout>

<style>
  .projects-hero {
    text-align: center;
    padding: 4rem 0;
  }

  .project-card {
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    padding: 2rem;
    margin-bottom: 2rem;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
  }

  .project-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .project-card h2 {
    color: #2d3748;
    margin-bottom: 1rem;
  }

  .tech-pills {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .tech-pill {
    background: #e2e8f0;
    padding: 0.25rem 0.75rem;
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 500;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .projects-grid-section {
      padding: 0 16px;
    }

    .projects-hero h1 {
      font-size: 2rem;
    }

    .projects-hero p {
      font-size: 1.1rem;
    }

    .project-card {
      padding: 2rem 1.5rem;
    }

    .tech-pills {
      gap: 0.5rem;
    }

    .tech-pill {
      font-size: 0.8rem;
      padding: 0.4rem 0.8rem;
    }
  }

  /* Smooth animations */
  .project-card {
    animation: fadeInUp 0.6s ease forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
